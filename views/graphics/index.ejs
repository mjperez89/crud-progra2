<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Graphics</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h1>Gráficos de Pacientes</h1>
        <div class="row">
            <div class="col-md-6">
                <canvas id="patientsByProvinceChart"></canvas>
            </div>
            <div class="col-md-6">
                <canvas id="categoriesByProvinceChart"></canvas>
            </div>
        </div>
    </div>

    <script>
        async function fetchChartData() {
            const response = await fetch('/graphics/data');
            const data = await response.json();
            return data;
        }

        function renderPatientsByProvinceChart(data) {
            const ctx = document.getElementById('patientsByProvinceChart').getContext('2d');
            const labels = data.map(item => item.province);
            const counts = data.map(item => item.count);

            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Cantidad de Pacientes por Provincia',
                        data: counts,
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }

        function renderCategoriesByProvinceChart(data) {
            const ctx = document.getElementById('categoriesByProvinceChart').getContext('2d');
            const labels = data.map(item => `${item.province} - ${item.category}`);
            const counts = data.map(item => item.count);

            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Cantidad de Categorías por Provincia',
                        data: counts,
                        backgroundColor: 'rgba(153, 102, 255, 0.2)',
                        borderColor: 'rgba(153, 102, 255, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }

        document.addEventListener('DOMContentLoaded', async () => {
            const data = await fetchChartData();
            renderPatientsByProvinceChart(data.patientsByProvince);
            renderCategoriesByProvinceChart(data.categoriesByProvince);
        });
    </script>
</body>
</html>