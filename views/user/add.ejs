<!DOCTYPE html>
<html lang="es-ES">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CRUD Node.js - Usuarios</title>
  <link rel="shortcut icon" href="img/icon.png" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;1,300;1,400;1,600;1,700;1,800&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="css/custom.css">
</head>

<body>
  <%- include("../partials/users_header.ejs") %>
    <div class="container mt-3">
      <div class="text-center text-white">
        <h2>Registro de Usuarios</h2>
      </div>
      <form action="./addUser" method="POST">
        <div class="row">
          <div class="col-12">
            <label for="name" class="form-label text-white">Nombre</label>
            <input type="text" name="name" id="name" class="form-control">
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-6">
            <label for="username" class="form-label text-white">Usuario</label>
            <input type="text" name="username" id="username" class="form-control">
          </div>
          <div class="col-6">
            <label for="password" class="form-label text-white">Contraseña</label>
            <input type="password" name="password" id="password" class="form-control">
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-6">
            <label for="email" class="form-label text-white">Email</label>
            <input type="text" name="email" id="email" class="form-control">
          </div>
          <div class="col-6">
            <label for="telefono" class="form-label text-white">Teléfono</label>
            <input type="text" name="telefono" id="telefono" class="form-control">
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-6">
            <label for="provincia" class="form-label text-white">Ciudad</label>
            <input type="text" name="provincia" id="provincia" class="form-control">
          </div>
          <div class="col-6">
            <label for="ciudad" class="form-label text-white">Provincia</label>
            <select name="ciudad" id="ciudad" class="form-select">
              <option value="" selected disabled>Seleccione su Provincia</option>
              <option value="MZA">Mendoza</option>
              <option value="SL">San Luis</option>
              <option value="LR">La Rioja</option>
              <option value="TC">Tucumán</option>
              <option value="TF">Tierra del Fuego</option>
              <option value="CH">Chubut</option>
              <option value="LP">La Pampa</option>
              <option value="CM">Catamarca</option>
              <option value="ST">Salta</option>
              <option value="MN">Misiones</option>
              <option value="RN">Rio Negro</option>
              <option value="CB">Córdoba</option>
              <option value="SF">Santa Fe</option>
              <option value="ER">Entre Rios</option>
              <option value="FM">Formosa</option>
              <option value="BSAS">Buenos Aires</option>
              <option value="NN">Neuquén</option>
              <option value="SJ">San Juan</option>
              <option value="SE">Santiago del Estero</option>
              <option value="JJ">Jujuy</option>
              <option value="CC">Chaco</option>
              <option value="CO">Corrientes</option>
              <option value="SC">Santa Cruz</option>
            </select>
          </div>
        </div>
        <br>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="admin" name="admin" value=true>
          <label class="form-check-label" for="admin">
            Administrador
          </label>
        </div>
        <br>
        <div class="row">
          <div class="col-6">
            <div class="float-start">
              <a href="./user" class="btn secondary-btn">Volver Atrás</a>
            </div>
          </div>
          <div class="col-6">
            <div class="float-end">
              <button type="submit" class="btn primary-btn">Agregar Usuario</button>
            </div>
          </div>
        </div>
      </form>
    </div>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
      crossorigin="anonymous"></script>
    <script src="js/script.js"></script>
</body>

</html>